<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/project_item_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/project_item_title"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/project_item_image" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/project_item_techno"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:text="Button"
            android:background="@drawable/button_custom"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/project_item_image"
            app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/project_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/project_item_title" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>